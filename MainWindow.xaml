<Window x:Class="OopRgr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OopRgr"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <!-- ToolBar -->
            <ToolBar Height="50" VerticalAlignment="Top" DockPanel.Dock="Top">
                <Button Click="Click" Tag="OpenProject">
                    <Image Source="/icons/OpenProjectIcon.png" ToolTip="Відкрити проект"/>
                </Button>
            </ToolBar>

            <!-- Image Viewer Area -->
            <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid>
                    <Viewbox Stretch="Uniform">
                        <Image x:Name="ImageViewer" Stretch="Uniform" />
                    </Viewbox>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>